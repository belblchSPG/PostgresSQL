<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Name ="MainWin"  Height="450" Width="800" Background="#FFFFD073">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*"/>
            <ColumnDefinition Width="627*"/>
        </Grid.ColumnDefinitions>
        <Button Content="Refresh Data" HorizontalAlignment="Left" Margin="10,336,0,0" VerticalAlignment="Top" Height="67" Width="96" Click="ButtonClick" RenderTransformOrigin="0.51,0.583" Background="#FFFFCD40" Foreground="#FF5A3502"/>
        <DataGrid x:Name="MainData" d:ItemsSource="{Binding}" Margin="10,8,10,103" Grid.ColumnSpan="2"  Background="#FFFFCD40" />
        <Button Content="Add User" HorizontalAlignment="Left" Margin="127,336,0,0" VerticalAlignment="Top" Height="67" Width="96" Click="ButtonClickAddUser" Grid.ColumnSpan="2" Background="#FFFFCD40" Foreground="#FF5A3502"/>

    </Grid>
</Window>
